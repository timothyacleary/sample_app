<%= provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
    <% if signed_in? %>
    <section>
      <%= render 'follow_form' %>
    </section>
    <% end %>
  </aside>
  <div class="span8">
  	<h3>Microposts (<%= @user.microposts.count %>)</h3>
  	<% if @user.microposts.any? %>
  		<ol class="microposts">
  			<%= render @microposts %>
  		</ol>
  		<%= will_paginate @microposts %>
  	<% else %>
  		<p>Still waiting for the first posts...</p>
  	<% end %>
  </div>
</div>